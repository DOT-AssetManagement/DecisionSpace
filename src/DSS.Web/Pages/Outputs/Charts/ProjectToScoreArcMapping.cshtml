@page
 @model DSS.Web.Pages.Outputs.Charts.ProjectToScoreArcMapping
@{
    Layout = "Shared/Layout";
    ViewData["Title"] = "Project to Score Arc Mapping";
    ViewData["Menu"] = "DSSMenus.Outputs";
    ViewData["SubMenu"] = "Charts";
    ViewData["SubSubMenu"] = "ProjectToScoreArcMapping";
}

<style>
    #arc-tooltip {
        position: absolute;
        text-align: center;
        padding: 8px;
        font: 12px sans-serif;
        background: white;
        border: 1px solid #000;
        border-radius: 8px;
        pointer-events: none;
        visibility: hidden; // starts out hidden
        opacity: 0;
        transition: opacity 0.3s, visibility 0s linear 0.3s;
    }

    #arc-tooltip.visible {
        opacity: 1;
        visibility: visible;
        transition-delay: 0s;
    }

    .chord.highlighted {
        opacity: 1;
        filter: brightness(65%);
        stroke-width: 7px;
    }
</style>

<div class="container-fluid px-4">
    <h1 class="mt-4">Projects And Goals Flow Diagram</h1>
   
    <div class="card mb-4">
        <div class="card-body">

            <form method="get" class="row">
                <div class="form-group col-md-4">
                    <label for="scenarioSelect">Select Candidate Pool:</label>
                    <div class="input-group">
                        <select class="form-control form-control-sm" id="scenarioSelect" name="poolId">
                            <option value=""><strong>-- Select Candidate Pool --</strong></option>
                            @foreach (var pool in Model.Pools)
                            {
                                @if (pool.Id == Model.PoolId)
                                {
                                    <option value="@pool.Id" selected>@pool.Name</option>
                                }
                                else
                                {
                                    <option value="@pool.Id">@pool.Name</option>
                                }

                            }
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4" style="margin-top:-1%">
                    <button type="submit" class="btn btn-primary" style="margin-top: 32px;">Search</button>
                </div>
            </form>
        </div>
        <div id="arc-tooltip"></div>
        <div id="chord-tooltip"></div>


    <div id="arcDiagram" style="width: 100%; height: 1000px; overflow: visible"></div>
</div>


