@page
@model DSS.Web.Pages.SetUp.AssetTypeparameter.EditModel
@{
}
@{
    Layout = "Shared/AdminLayout";
    ViewData["Menu"] = "DSSAdminMenus.Setup";
    ViewData["SubMenu"] = "AssetTypeparameter";
}

<h1>@ViewData["Title"]</h1>

<div class="card mt-5" style="width:70%;margin-left:10%">
    <div class="card-header">
        <h2>Edit Asset Type Parameter</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="box-body">
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Asset Type</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" required="" placeholder="Asset Type" name="AssetType" value="@Model.AssetEdit.AssetType">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Benefit Scaling Factor</label>
                    <div class="col-sm-6">
                        <input type="number" class="form-control" required="" placeholder="Benefit Scaling Factor" name="BenefitScalingFactor" value="@Model.AssetEdit.BenefitScalingFactor">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Scenario</label><br />
                <div class="col-sm-6">
                    <select class="form-control" name="ScenId">
                    <option value="">Select Scenario</option>
                    @foreach (var scenario in Model.Scenarios)
                    {
                        string selectedClass = (scenario.Id == Model.AssetEdit.ScenId) ? "selected" : "";
                        <option value="@scenario.Id" class="@selectedClass">@scenario.ScenName</option>
                    }
                </select>
                    <input type="hidden" name="ScenId" value="@Model.AssetEdit.ScenId">
                </div>
            </div>

            <br />
            <div class="mt-3">
                <a href="/Configuration/Goals/List" class="btn btn-primary">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Submit</button>
            </div>
        </form>
    </div>
</div>