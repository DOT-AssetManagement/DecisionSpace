@page
@model DSS.Web.Pages.SetUp.OtherParameter.ListModel
@{
    ViewData["Title"] = "Other Parameter";
    Layout = "Shared/AdminLayout";
    ViewData["Menu"] = "DSSAdminMenus.Setup";
    ViewData["SubMenu"] = "OtherParameter";
}

<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <style>
        .card {
            margin-top: 20px;
            width: 90%;
            margin-left: auto;
            margin-right: auto;
        }

        .card-body {
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="mt-3" style="margin-left:2%">
        <h1>Other Parameter</h1>
      
        </div>
        <div class="card">
            <div class="card-body">
                <table id="parametertbl" class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Description</th>
                            <th>Value</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dto in Model.otherParameterDtos)
                        {
                            <tr>
                                <td>@dto.Code</td>
                                <td>@dto.Description</td>
                                <td>@dto.Val</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/SetUp/OtherParameter/Edit?code=@dto.Code" class="btn btn-primary btn-sm">Edit</a>
                                        <form method="post" asp-page-handler="DeleteParameter">
                                            <input type="hidden" name="Code" value="@dto.Code" />
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        

    </div>

    <a style="margin-left:2%;margin-bottom:1%" class="btn btn-primary mt-3" href="/SetUp/OtherParameter/Create">Add Parameter</a>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#parametertbl').DataTable();
        });
    </script>
</body>
</html>
