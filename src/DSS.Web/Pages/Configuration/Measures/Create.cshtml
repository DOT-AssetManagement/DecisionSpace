@page
@model DSS.Web.Pages.Configuration.Measures.CreateModel
@{
}
@{
    Layout = "Shared/Layout";
    ViewData["Menu"] = "DSSMenus.Configuration";
}


<div class="container-fluid px-4">
    <h1 class="mt-4">Measures</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item active">Measures</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <form class="form-horizontal" method="POST" asp-page-handler="Create">
                <div class="box-body">
                    <div class="form-group">
                        <label for="Name" class="col-sm-2 control-label">Measure</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" required="" id="Name" placeholder="Measures" name="Name" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Description" class="col-sm-2 control-label">Measure Description</label>
                        <div class="col-sm-6">
                            <textarea class="form-control" required="" id="Description" style="resize: none; height:100px;" placeholder="Description" name="Description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/Configuration/Measures/List" class="btn btn-primary">Cancel</a>
                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                </div>
            </form>
        </div>
    </div>   
</div>

