@page
@model DSS.Web.Pages.Configuration.Goals.CreateModel
@{
}

@{
    Layout = "Shared/Layout";
    ViewData["Menu"] = "DSSMenus.Configuration";
}



<div class="container-fluid px-4">
    <h1 class="mt-4">Goals</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item active">Goals</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <form class="form-horizontal" method="POST" asp-page-handler="Create">

                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Goal</label>

                        <div class="col-sm-6">
                            <input type="text" class="form-control" required="" id="inputEmail3" placeholder="Goal" name="Name" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Goal Description</label>

                        <div class="col-sm-6">
                            <textarea class="form-control" required="" id="inputEmail3" style="resize: none; height:100px;" placeholder="Description" name="Description"></textarea>
                        </div>
                    </div>

                </div>
                <div class="mt-3">
                    <a href="/Configuration/Goals/List" class="btn btn-primary">Cancel</a>
                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                </div>
            </form>
        </div>
    </div>   
</div>

