@page
@model DSS.Web.Pages.Configuration.Goals.EditModel
@{
    Layout = "Shared/Layout";
    ViewData["Menu"] = "DSSMenus.Configuration";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Measure</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/Configuration/Goals">Goals</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <form method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label for="Name" class="col-sm-2 control-label">Goals</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" required="" id="Name" placeholder="Goals" name="GoalName" value="@Model.Goal.Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Description" class="col-sm-2 control-label">Goals Description</label>
                        <div class="col-sm-6">
                            <textarea class="form-control" required="" id="Description" style="resize: none; height:100px;" placeholder="Description" name="GoalDescription">@Model.Goal.Description</textarea>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/Configuration/Goals/List" class="btn btn-primary">Cancel</a>
                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div> 


