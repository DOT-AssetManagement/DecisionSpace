@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DSS.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Theming
@using Volo.Abp.Users
@model DSS.Web.Pages.IndexModel
@inject IHtmlLocalizer<DSSResource> L
@inject IThemeManager ThemeManager
@inject Volo.Abp.Settings.ISettingProvider SettingProvider
@{
    Layout = ThemeManager.CurrentTheme.GetEmptyLayout();
}
@inject ICurrentUser CurrentUser


<body style="background-image: url('/images/landing-background.jpeg'); background-repeat: no-repeat;
            background-size: cover;
            background-color: #f0f0f0;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 mt-5 text-white">
                <img src="images/pennsylvania-logo.png" alt="Logo" class="img-fluid mb-3">
                <h1>DECISION SPACE SYSTEM</h1>
                <p style="line-height: 2; ">
                    DecisionSpace is an analysis tool designed to support and automate the process of selecting work items from diverse sources with multiple uncorrelated benefit metrics. The system
                    takes in work items from multiple sources, calculates benefits based on existing research and business logic, and ranks work based on benefit and user-defined parameters.
                </p>
            </div>
            <div class="col-md-3 text-center" style="padding-top: 50px;"> <!-- Adjust padding-top as needed to position the button -->
                <a abp-button="Primary" href="~/Account/Login" style="color: white;"><i class="fa fa-sign-in"></i> @L["Login"]</a>
            </div>
    </div>

</body>



